<header>
        <nav
          class="navbar navbar-expand-md navbar-light border-bottom p-0 ps-5"
        >
          <div class="container">
            <a class="navbar-brand" href="/">
              <span class="text-main-color fw-bold fs-3">Answers.com</span>
            </a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <!-- HOME SEARCH AND LOGOUT ICONS -->
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item border-main-color">
                  <a class="nav-link" href="/">
                    <span class="material-symbols-outlined text-main-color">
                      home
                    </span>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">
                    <span class="material-symbols-outlined text-main-color">
                      search
                    </span>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">
                    <span class="material-symbols-outlined text-main-color">
                      logout
                    </span>
                  </a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="#">
                    <span class="text-main-color">
                      <nav>
                        {{#if loggedIn}}
                          <a href="/dashboard">dashboard</a>
                          <button
                            id="logout"
                            class="btn-no-style"
                          >logout</button>
                        {{else}}
                          <a href="/login">login</a>
                        {{/if}}
                      </nav></span>
                  </a>
                </li>

              </ul>

              <form class="d-flex">

                <input
                  class="form-control me-2 search-icon ms-4"
                  type="search"
                  placeholder="Search Answers"
                />

              </form>

            </div>

            <!-- Icons end -->

          </div>
        </nav>
      </header>